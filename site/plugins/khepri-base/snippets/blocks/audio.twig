{% set file = block.source.toFile %}
{% if file != '' %}
  <div class="kd-audio-wrapper
    {% if block.classes != '' %} {{ block.classes }}{% endif %}" 
    {% if block.animation != '' %} data-aos="{{ block.animation }}" {% endif %}
    {% if block.color != '' %}style="background-color: {{ block.color }};"{% endif %}>
    <div>
      <h3 class="kd-audio-title">{{ block.title.html }}</h3>
      <p class="kd-audio-description">{{ block.description.html }}</p>
      <audio class="kd-audio-element"
        controls
        {{ block.autoplay.isTrue ? 'autoplay' : '' }}
      >
        <source src="{{ file.url }}" type="{{ file.mime }}">
        Your browser does not support the <code>audio</code> element.
      </audio>
    </div>
  </div>
{% endif %}