{% block kd_heading %}
  {% set hLevel = block.level %}
  <{{ hLevel.or('h2') }} class="kd-heading{% if block.centered.isTrue %} justify-content-center d-flex text-center{% endif %}
    {% if block.classes != '' %} {{ block.classes }}{% endif %}" 
    {% if block.animation != '' %} data-aos="{{ block.animation }}" {% endif %}
    {% if block.color != '' %}style="background-color: {{ block.color }};"{% endif %}>
      {{ block.text | raw }}
  </{{ hLevel }}>
{% endblock %}
