<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% set ignore = ['error', 'wartung', 'login', 'suche'] %}
    {% for p in pages %}
        {% if p.uri not in ignore %}
            <url>
                <loc>{{ p.url }}</loc>
                <lastmod>{{ p.modified('c', 'date') }}</lastmod>
                <priority>{{ p.isHomePage ? 1 : 0.5 / p.depth }}</priority>
            </url>
        {% endif %}
    {% endfor %}
</urlset>